# AI侦探推理游戏 - Docker环境配置文件
# 复制此文件为 .env 并根据实际情况修改配置

# ==================== AI配置 ====================
# OpenAI API密钥（必填）
OPENAI_API_KEY=your_api_key_here

# API服务地址
OPENAI_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# 使用的AI模型
OPENAI_MODEL=deepseek-v3

# ==================== 游戏配置 ====================
# 游戏语言
LANGUAGE=chinese

# 调试模式
DEBUG_MODE=false

# AI参数设置
NARRATOR_TEMP=0.8
CHARACTER_TEMP=0.9
MAX_HISTORY=10

# 游戏限制设置
MAX_ROUNDS=30
MAX_HINTS=3

# ==================== 服务器配置 ====================
# 服务器地址和端口
HOST=0.0.0.0
PORT=8000

# 管理员密码（用于后台管理）
ADMIN_PASSWORD=your_secure_admin_password

# ==================== 数据库配置 ====================
# 数据库主机（Docker内部使用mysql作为主机名）
DB_HOST=mysql

# 数据库端口
DB_PORT=3306

# 数据库用户名
DB_USER=gameuser

# 数据库密码（重要：请修改为强密码）
DB_PASSWORD=your_secure_database_password

# 数据库名称
DB_NAME=ai_detective

# ==================== Docker特定配置 ====================
# MySQL root密码（用于数据库管理）
MYSQL_ROOT_PASSWORD=your_secure_root_password 